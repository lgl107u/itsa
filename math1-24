#include <stdio.h>

int faktorial(int i){ 
    if(i==0 || i==1) return 1; 
    return i*faktorial(i-1); 
} 

int main()    
{    
    int tm,hr; 
    while(scanf("%d %d",&tm,&hr)!=EOF)    
    {    
       double amt;
       if(tm<=60) amt =tm*hr;
       if(tm>60&&tm<=120) amt = 60*hr+(tm-60)*1.33*hr;
       if(tm>120) amt = 60*hr+60*1.33*hr+(tm-120)*1.66*hr;
       printf("%.1f\n",amt);
    }    
    return 0;    
}
