#include <stdio.h>   
#include <string.h>   
#include <stdlib.h> 
#include <math.h>
 
int main(void)   
{   
    int inp,i;   
    while(scanf("%d",&inp)!=EOF)   
    { 
        float sum=0,temp,sq,eq;
        if(inp<=15)
        {
            for(i=1;i<=inp;i++)
            {
                sq = -1;
                eq = 1/((2.0*i)-1);
                if( (i+1)%2 == 0 ) sq = 1;
                temp = sq*eq;
                sum+= temp;
            }
            printf("%.3f\n",sum);
        }
    }   
    return 0;   
}
